{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/authentication.css') }}">
{% endblock %}
{% block body %}
    <main>
        {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h2>Réinitialiser votre mot de passe</h2>

        {{ form_start(requestForm, {'attr': {'novalidate':'novalidate'}}) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse e-mail et vous recevrez un lien pour réinitialiser votre mot de passe
                </small>
            </div>

            <button class="btn btn-primary">Envoyer un e-mail de réinitialisation</button>
        {{ form_end(requestForm) }}
    </main>
{% endblock %}
