{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/authentication.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/register.js') }}" defer></script>
{% endblock %}
{% block body %}
    <main>
        <h2>Réinitialiser votre mot de passe</h2>
        {{ form_start(resetForm, {'attr': {'novalidate':'novalidate'}}) }}
            <div class="form-row">
                <div class="form-column">
                    {{ form_label(resetForm.plainPassword.first) }}
                    <div class="password-container">
                        {{ form_widget(resetForm.plainPassword.first) }}
                        <span class="material-symbols-outlined" onclick="togglePassword(event)">visibility</span>
                    </div>
                    {{ form_errors(resetForm.plainPassword.first) }}
                </div>
            </div>
            <div class="form-row" id="passwordLevelRow" style="display: none;">
                <div class="form-column">
                    <div class="alert alert-danger" id="passwordAlert" style="display: none;padding: .5rem; margin-bottom: .5rem;" role="alert">Votre mot de passe est compromis</div>
                    <p id="passwordLevelText"></p>
                    <div class="password-level-container">
                        <span class="password-level password-level-weak"></span><span class="password-level password-level-weak"></span><span class="password-level password-level-weak"></span><span class="password-level password-level-medium"></span><span class="password-level password-level-medium"></span>
                        <span class="password-level password-level-medium"></span><span class="password-level password-level-medium"></span><span class="password-level password-level-strong"></span><span class="password-level password-level-strong"></span><span class="password-level password-level-strong"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-column">
                    {{ form_label(resetForm.plainPassword.second) }}
                    <div class="password-container">
                        {{ form_widget(resetForm.plainPassword.second) }}
                        <span class="material-symbols-outlined" onclick="togglePassword(event)">visibility</span>
                    </div>
                    {{ form_errors(resetForm.plainPassword.second) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-column">
                    <button class="btn btn-primary">Réinitialiser le mot de passe</button>
                </div>
            </div>
        {{ form_end(resetForm) }}
    </main>
{% endblock %}
