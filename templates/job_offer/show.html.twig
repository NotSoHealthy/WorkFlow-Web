{% extends 'base.html.twig' %}

{% block title %}JobOffer{% endblock %}

{% block body %}
    <h1>JobOffer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job_offer.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ job_offer.Title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job_offer.Description }}</td>
            </tr>
            <tr>
                <th>Publication_Date</th>
                <td>{{ job_offer.PublicationDate ? job_offer.PublicationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Expiration_Date</th>
                <td>{{ job_offer.ExpirationDate ? job_offer.ExpirationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Contract_Type</th>
                <td>{{ job_offer.ContractType }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ job_offer.Salary }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_job_offer_index') }}">back to list</a>

    <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}">edit</a>

    {{ include('job_offer/_delete_form.html.twig') }}
