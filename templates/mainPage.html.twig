    <script>
        AOS.init({ duration: 1200, once: true });

        // Typing Animation with Deleting Effect
        const typingElement = document.querySelector('.typing-animation');
        const phrases = [
            "Simplifiez la gestion de vos ressources humaines",
            "Optimisez vos processus RH",
            "Gagnez du temps avec Workflow",
            "Une solution intuitive pour les pros RH"
        ];
        let currentPhraseIndex = 0;
        let currentCharIndex = 0;
        let isTyping = true;

        function updateText() {
            const phrase = phrases[currentPhraseIndex];
            if (isTyping) {
                typingElement.textContent = phrase.substring(0, currentCharIndex + 1);
                currentCharIndex++;
                if (currentCharIndex === phrase.length) {
                    isTyping = false;
                    setTimeout(updateText, 1000); // Pause avant de supprimer
                } else {
                    setTimeout(updateText, 50); // Vitesse de frappe
                }
            } else {
                typingElement.textContent = phrase.substring(0, currentCharIndex);
                currentCharIndex--;
                if (currentCharIndex < 0) {
                    isTyping = true;
                    currentPhraseIndex = (currentPhraseIndex + 1) % phrases.length;
                    currentCharIndex = 0;
                    setTimeout(updateText, 50); // Pause avant la prochaine phrase
                } else {
                    setTimeout(updateText, 50); // Vitesse de suppression
                }
            }
        }

        updateText();

        // Lightbox Functionality
        function openLightbox(src) {
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightbox-img');
            lightbox.style.display = 'block';
            lightboxImg.src = src;
        }

        function closeLightbox() {
            document.getElementById('lightbox').style.display = 'none';
        }
