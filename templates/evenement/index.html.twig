{% extends 'layout.html.twig' %}


{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="{{ asset('styles/layout.css') }}">
    <style>
        .container {
            background:rgb(241,244,248);
            padding: 2rem;
            min-height: 100vh;
        }
        h1 {
            color:rgb(98, 138, 248);
            font-family: 'Bebas Neue', sans-serif;
            font-size: 3rem;
        }
        .project {
            background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAAAXNSR0IArs4c6QAAABhJREFUKFNjZCASZGTk+A8GBoYfDAwM/1EAADvOBB4AAAAASUVORK5CYII=') repeat, #222; /* Scratched texture */
            border: 2px solid rgb(98, 138, 248);
            border-radius: 8px;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        .project:hover {
            transform: scale(1.02);
        }
        .project-header {
            background: linear-gradient(135deg,rgb(255, 255, 255) 0%,rgb(255, 255, 255) 100%);
            padding: 1rem;
            position: relative;
            border-bottom: 2px dashed #fff;
        }
        .project-header h3 {
            font-size: 2rem;
            font-family: 'Bebas Neue', sans-serif;
            color:rgb(0, 0, 0);
            margin: 0;
            text-transform: uppercase;
        }
        .project-state-tag {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            color: #39ff14; /* Neon green */
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1rem;
            transform: rotate(10deg);
            text-shadow: 0 0 5px rgba(57, 255, 20, 0.5);
        }
        .project-body {
            padding: 1.5rem;
            color: #fff;
            font-family: 'Bebas Neue', sans-serif;
            background: rgb(128, 161, 253);
        }
        .project-info {
            width: 300px;
            margin-bottom: 0.75rem;
            align-items: center;
            font-size: 1.4rem;
            text-transform: uppercase;
            opacity: 0.9;
        }
        .project-info i {
            margin-right: 0.5rem;
            color:rgb(46, 102, 255);
        }
        .project-progress {
            margin-top: 1rem;
            font-size: 1.1rem;
            color: #fff;
        }
        .progress-spray {
            height: 10px;
            background: #333;
            border: 1px solid #ff2e63;
            border-radius: 5px;
            overflow: hidden;
            position: relative;
        }
        .progress-spray .progress-bar {
            background: linear-gradient(90deg, #39ff14 0%, #ff2e63 100%);
            height: 100%;
            transition: width 0.5s ease;
            box-shadow: 0 0 10px rgba(57, 255, 20, 0.5);
        }
        .project-footer {
            padding: 1rem;
            position: relative;
        }
        .project-footer .btn {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1rem;
            padding: 0.4rem 0.8rem;
            border: 2px solid black;
            transition: all 0.3s ease;
            text-transform: uppercase;
        }
        .btn-details {
            position: relative;
            bottom: 2.5rem;
            color: solid black;
            background:rgb(196, 201, 252);
        }
        .btn-details:hover {
            background:rgb(84, 87, 253);
            color: solid black;
            transform: scale(1.05);
        }
        .btn-edit {
            background: #39ff14;
            color: #000;
            position: relative;
            bottom: 2.5rem;
        }
        .btn-edit:hover {
            background: #00cc00;
            transform: scale(1.05);
        }
        .btn-delete {
            position: relative;
            bottom: 2.1rem;
            color: rgb(0, 0, 0);
            background:rgb(255, 0, 0);
        }
        .btn-delete:hover {
            background:rgb(255, 0, 0);
            color: rgb(0, 0, 0);
            transform: scale(1.05);
        }
        .btn-reserve {
            background:rgb(255, 252, 94);
            color: #000;
            transition: all 0.3s ease;
            border: 2px solid black;
        }
        .btn-reserve:hover {
            background:rgb(255, 255, 0);
            transform: scale(1.05);
        }
        .btn-add-project {
            background: rgb(98, 138, 248);
            color: #000;
            border: 2px solid black;
            transition: transform 0.3s ease-in-out;
        }
        .btn-add-project:hover {
            background: rgb(53, 105, 248);
            border: 2px solid black;
            transform: scale(1.05);
        }
        .modal-content {
            background: rgb(128, 161, 253);
            color: #fff;
            border: 2px solid rgb(98, 138, 248);
        }
        .modal-header {
            background:rgb(255, 255, 255);
            color: #000;
        }
        .modal-body {
            font-family: 'Bebas Neue', sans-serif;
        }
        .modal-title{
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2rem;
            color:rgb(0, 0, 0);
            text-transform: uppercase;
            text-align: center;
            margin-left: 11rem;
        }
        .modal-footer {
            border: none;
        }
        /* Phallic shape in the background (abstract) */
        .project-card::before {
            content: '';
            position: absolute;
            top: 10%;
            left: 10%;
            width: 20px;
            height: 60px;
            background: rgba(255, 46, 99, 0.2);
            border-radius: 20px 20px 0 0;
            transform: rotate(15deg);
            z-index: 0;
        }
        .project-card::after {
            content: '';
            position: absolute;
            top: 25%;
            left: 15%;
            width: 15px;
            height: 15px;
            background: rgba(255, 46, 99, 0.2);
            border-radius: 50%;
            z-index: 0;
        }
    </style>
{% endblock %}

{% block main %}
<main>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Evenements</h1>

        {# Display Flash Messages #}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="text-end mb-4">
            <a href="{{ path('app_addevent') }}" class="btn btn-add-project">
                <i class="fas fa-plus-circle me-2"></i>Ajouter un Evenement
            </a>
        </div>
        {% if events|length > 0 %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for event in events %}
                    <div class="col">
                        <div class="project" data-bs-toggle="modal" data-bs-target="#projectModal{{ event.id }}">
                            <div class="project-header">
                                <h3 align="center">{{ event.Title }}</h3>
                            </div>
                            <div class="project-body">
                            <table>
                                <tr class="project-info">
                                <td>
                                    <i class="fas fa-calendar-alt"></i>
                                </td>
                                <td>
                                    <strong>Date:</strong> &nbsp&nbsp {{ event.DateAndTime|date('Y-m-d h:m') }}
                                </td>
                                </tr>
                                <tr class="project-info">
                                <td>
                                    <i class="fa-solid fa-map-location-dot"></i>
                                </td>
                                <td>
                                    <strong>Adresse:</strong> &nbsp&nbsp {{ event.Location }}
                                </td>
                                </tr>
                                <tr class="project-info">
                                <td>
                                    <i class="fa-solid fa-list"></i>
                                </td>
                                <td>
                                    <strong>Type:</strong> &nbsp&nbsp {{ event.Type }}
                                </td>
                                </tr>
                            </table>
                            </div>
                            </div>
                            <div class="project-footer">
                                    <form method="post" action="{{ path('app_edit_event', {'id': event.id}) }}" style="display:inline;">
                                        <button class="btn btn-edit">
                                            <i class="fa-solid fa-pen"></i> modifier
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('app_delete_event', {'id': event.id}) }}" style="display:inline;">
                                        <button class="btn btn-delete">
                                            <i class="fas fa-trash-alt"></i> Supprimer
                                        </button>
                                    </form>
                                <!-- {#</div>#}-->
                        </div>

                        {# Modal for Project Details #}
                        <div class="modal fade" id="projectModal{{ event.id }}" tabindex="-1" aria-labelledby="projectModalLabel{{ event.id }}" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="projectModalLabel{{ event.id }}" align="center">{{ event.Title }}</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                    <table>
                                        <tr class="project-info">
                                        <td>
                                            <i class="fas fa-calendar-alt"></i>
                                        </td>
                                        <td>
                                            <strong>Date:</strong> &nbsp&nbsp {{ event.DateAndTime|date('Y-m-d h:m') }}
                                        </td>
                                        </tr>
                                        <tr class="project-info">
                                        <td>
                                            <i class="fa-solid fa-map-location-dot"></i>
                                        </td>
                                        <td>
                                            <strong>Adresse:</strong> &nbsp&nbsp {{ event.Location }}
                                        </td>
                                        </tr>
                                        <tr class="project-info">
                                        <td>
                                            <i class="fa-solid fa-list"></i>
                                        </td>
                                        <td>
                                            <strong>Type:</strong> &nbsp&nbsp {{ event.Type }}
                                        </td>
                                        </tr>
                                        <tr class="project-info">
                                        <td>
                                            <i class="fa-solid fa-couch"></i>
                                        </td>
                                        <td>
                                            <strong>Nombre de Place:</strong> &nbsp&nbsp {{ event.NumberOfPlaces }}
                                        </td>
                                        </tr>
                                        <tr class="project-info">
                                        <td>
                                            <i class="fa-brands fa-google"></i>
                                        </td>
                                        <td>
                                            <strong>En Ligne:</strong> &nbsp&nbsp {{ event.isOnline ? 'Oui' : 'Non' }}
                                        </td>
                                        </tr>
                                        <tr class="project-info">
                                        <td>
                                            <i class="fa-solid fa-info" style="margin-left:8px;"></i>
                                        </td>
                                        <td>
                                            <strong>Description:</strong>
                                        </td>
                                        </tr>
                                        <tr class="project-info">
                                        <td></td>
                                        <td>
                                            {{ event.Description }}
                                        </td>
                                        </tr>
                                    </table>
                                    <form method="post" action="{{ path('app_add_reservation', {'id': event.id}) }}" style="display:inline; align:center;margin-bottom: 10rem;">
                                                <button class="btn-reserve">
                                                    <i class="fas fa-ticket-alt"></i> Réserver
                                                </button>
                                            </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                Aucun Evenement trouvé
            </div>
        {% endif %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </main>
{% endblock %}