{% extends 'layout.html.twig' %}

{% block title %}Modifier un Projet{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background: linear-gradient(145deg, #e0f2fe, #f0f9ff);
        font-family: 'Inter', sans-serif;
    }

    .edit-form-container {
        max-width: 720px;
        margin: 3rem auto;
        background: #e0f2fe;
        border: 2px dashed #60a5fa;
        border-radius: 16px;
        padding: 2.5rem 3rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .edit-ribbon {
        position: absolute;
        top: -15px;
        left: -15px;
        background: #3b82f6;
        color: white;
        padding: 0.4rem 1rem;
        font-weight: 700;
        font-size: 0.8rem;
        border-top-left-radius: 12px;
        border-bottom-right-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .edit-form-container h1 {
        text-align: center;
        font-size: 2rem;
        color: #1e40af;
        margin-bottom: 2rem;
    }

    .edit-form-container .form-row {
        margin-bottom: 1.5rem;
    }

    .edit-form-container label {
        display: block;
        font-weight: 600;
        color: #334155;
        margin-bottom: 0.4rem;
    }

    .edit-form-container input,
    .edit-form-container textarea,
    .edit-form-container select {
        width: 100%;
        padding: 0.7rem 1rem;
        font-size: 1rem;
        border: 1px solid #cbd5e1;
        border-radius: 10px;
        background-color: #fff;
        transition: 0.2s ease;
    }

    .edit-form-container input:focus,
    .edit-form-container textarea:focus,
    .edit-form-container select:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
        outline: none;
    }

    .edit-form-container .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

    .edit-form-container button,
    .edit-form-container a {
        padding: 0.6rem 1.2rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

    .edit-form-container .btn-edit {
        background-color: #3b82f6;
        color: white;
    }

    .edit-form-container .btn-edit:hover {
        background-color: #2563eb;
    }

    .edit-form-container .btn-back {
        background-color: #9ca3af;
        color: white;
    }

    .edit-form-container .btn-back:hover {
        background-color: #6b7280;
    }
</style>
{% endblock %}

{% block main %}
<main>
<div class="edit-form-container">
    
    <h1>Modifier un Projet</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(form.Name) }}
        {{ form_row(form.Description) }}
        {{ form_row(form.Start_Date) }}
        {{ form_row(form.End_Date) }}
        {{ form_row(form.Budget) }}
        {{ form_row(form.manager) }}
        {{ form_row(form.department) }}
        {{ form_row(form.State) }}

        <div class="form-actions">
            <button type="submit" class="btn-edit">Modifier</button>
            <a href="{{ path('project_index') }}" class="btn-back">Retour</a>
        </div>
    {{ form_end(form) }}
</div>
</main>
{% endblock %}
