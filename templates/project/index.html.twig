{% extends 'base.html.twig' %}

{% block title %}Liste des Projets{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f1f5f9;
    }

    .book-card {
        background: #f3f4f6;
        border-radius: 14px;
        border: 1px solid #d1d5db;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s ease;
        padding: 1.8rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .book-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    }

    .book-header h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1f2937;
    }

    .book-header p {
        font-size: 0.95rem;
        color: #4b5563;
    }

    .book-body {
        margin-top: 1rem;
        font-size: 0.9rem;
        color: #374151;
    }

    .status-badge {
        font-size: 0.8rem;
        font-weight: 600;
        padding: 6px 12px;
        border-radius: 8px;
        color: white;
        text-transform: uppercase;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
    }

    .status-termin√© {
        background-color: #16a34a;
    }

    .status-en-cours {
        background-color: #facc15;
        color: #1e293b;
    }

    .status-annul√© {
        background-color: #dc2626;
    }

    .status-planifi√© {
        background-color: #3b82f6;
    }

    .border-state-termin√© {
        border-left: 6px solid #16a34a;
    }

    .border-state-en-cours {
        border-left: 6px solid #facc15;
    }

    .border-state-annul√© {
        border-left: 6px solid #dc2626;
    }

    .border-state-planifi√© {
        border-left: 6px solid #3b82f6;
    }

    .book-footer {
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .project-buttons {
        display: flex;
        gap: 0.6rem;
    }

    .btn-action {
        font-size: 0.85rem;
        padding: 6px 14px;
        font-weight: 500;
        border-radius: 8px;
        border: none;
        transition: all 0.2s ease;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        color: white;
    }

    .btn-edit {
        background-color: #f59e0b;
    }
    .btn-edit:hover {
        background-color: #d97706;
    }

    .btn-delete {
        background-color: #ef4444;
    }
    .btn-delete:hover {
        background-color: #b91c1c;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">üìò Liste des Projets</h1>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        {% for project in projects %}
            <div class="col">
                <div class="book-card border-state-{{ project.State|lower|replace({' ': '-'}) }}">
                    <div>
                        <div class="book-header d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h3 class="mb-1">{{ project.Name }}</h3>
                                <p class="mb-1">D√©partement : {{ project.department.Name }}</p>
                                <p class="mb-1">Budget : {{ project.Budget }} ‚Ç¨</p>
                            </div>
                            <div>
                                <span class="status-badge status-{{ project.State|lower|replace({' ': '-'}) }}">
                                    {{ project.State }}
                                </span>
                            </div>
                        </div>
                        <div class="book-body">
                            üìÅ <strong>ID:</strong> #{{ project.id }}<br>
                            {# Optional: deadline, description, etc. #}
                        </div>
                    </div>
                    <div class="book-footer">
                        <small class="text-muted">Cr√©√© r√©cemment</small>
                        <div class="project-buttons">
                            <a href="{{ path('project_edit', { id: project.id }) }}" class="btn btn-action btn-edit">‚úèÔ∏è Modifier</a>
                            <form method="post" action="{{ path('project_delete', { id: project.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer ce projet ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                                <button class="btn btn-action btn-delete">üóëÔ∏è Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">Aucun projet trouv√©.</div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
