{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        h1 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .card:hover {
            transform: scale(1.01);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            font-size: 1.5rem;
            color: #333;
        }

        .card-text {
            font-size: 1rem;
            line-height: 1.6;
            
        }
        .custom-btn {
          padding: 10px;
          text-decoration: none;
          color: #fff;
          border: none;
          border-radius: 10px;
          transition: all 0.2s ease;
        }

        .custom-btn:hover {
          background-color: #0f2d3b;
          box-shadow: 0 4px 10px rgba(20, 60, 78, 0.4);
          color: #fff;
          text-decoration: none;
          transform: translateY(-1px);
        }
        .custom-btn .material-symbols-outlined {
          font-size: 18px;
        }
        .card_a{
          text-decoration: none;
        }
        .btn-sm {
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
        }
        .supp:hover{
          background-color:rgb(117, 31, 27);
          box-shadow: 0 4px 10px rgba(52, 14, 11, 0.4);
          color: #fff;
          text-decoration: none;
          transform: translateY(-1px);
        }
        .btn-hover-shadow:hover {
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
      }
    </style>
{% endblock %}
{% block title %}Liste des Formations{% endblock %}
{% block main %}
<main>
    <h1>Liste des Formations</h1><br>
    <a href="{{ path('app_inscription_list') }}" class="custom-btn">üìù</a>
    {% if is_granted('ROLE_RESPONSABLE') %}
    <a href="{{ path('app_formation_add') }}" class="custom-btn"> üì• </a>
    {% endif %}
    <div class="container mt-4">
        {% for formation in pagination %}
        {% if is_granted('ROLE_RESPONSABLE') %}
        <a href="{{ path('app_formation_edit', { id: formation.id }) }}" class="card_a">
          <div class="card mb-3 shadow-sm border-0 mx-auto" style="max-width: 700px;">
            <div class="card-body">
              <h5 class="card-title">{{ formation.title }}</h5>
              <p class="card-text">
                <strong>Date : </strong> {{ formation.dateBegin|date('Y-m-d') }} ‚Üí {{ formation.dateEnd|date('Y-m-d') }}<br>
                <strong>Description : </strong> {{ formation.description }}<br>
                <strong>Participants max :</strong> {{ formation.participantsMax }}
              </p>
            </a>
            {% endif %}
            {% if is_granted('ROLE_USER') and not is_granted('ROLE_RESPONSABLE') %}
              <div class="card mb-3 shadow-sm border-0 mx-auto" style="max-width: 700px;">
                <div class="card-body">
                  <h5 class="card-title">{{ formation.title }}</h5>
                  <p class="card-text">
                    <strong>Date : </strong> {{ formation.dateBegin|date('Y-m-d') }} ‚Üí {{ formation.dateEnd|date('Y-m-d') }}<br>
                    <strong>Description : </strong> {{ formation.description }}<br>
                    <strong>Participants max :</strong> {{ formation.participantsMax }}
                  </p>
            {% endif %}
              <div class="d-flex justify-content-end gap-2">
                {% if is_granted('ROLE_RESPONSABLE') %}
                <a href="{{ path('app_formation_delete', { id: formation.id }) }}" class="btn supp btn-danger btn-sm w-100" style="margin-top:5px;">üóë Supprimer</a>
                {% endif %}
                {% if is_granted('ROLE_USER') and not is_granted('ROLE_RESPONSABLE') %}
                  {% set alreadyRegistered = false %}

                  {% for inscription in user_inscriptions %}
                    {% if inscription.formation.id == formation.id %}
                      {% set alreadyRegistered = true %}
                    {% endif %}
                  {% endfor %}

                {% if alreadyRegistered %}
                  <button class="btn btn-success btn-sm" style="font-size: 1rem;" disabled>D√©j√† inscrit</button>
                {% else %}
                  <a href="{{ path('app_inscription_new', { id: formation.id }) }}" class="btn btn-primary w-100 btn-hover-shadow" style="margin-top:5px;">‚úÖ S'inscrire</a>
                {% endif %}
                {% endif %}
              </div>
            </div>
          </div>
        {% else %}
          <div class="alert alert-info">No formations found.</div>
        {% endfor %}
      </div>      
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</main>
{% endblock %}
